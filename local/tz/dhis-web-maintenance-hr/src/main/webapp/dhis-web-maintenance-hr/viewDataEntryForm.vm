<script>
	var i18n_save_success = '$encoder.jsEscape( $i18n.getString( "save_success" ) , "'" )';
	
	var t;
	var timer_is_on=0;
	
	if('$autoSave' == 'true'){
		if (!timer_is_on)
		  {
			  timer_is_on=1;
			  timedCount();
		  }
	}
	
	function timedCount()
	{
		validateDataEntryForm();
		t=setTimeout("timedCount()", 20000);//1000 -> 1s
		byId( 'message' ).style.display = 'none';
	}
	
</script>
