#!/bin/sh
#       ____  __  ______________ 
#      / __ \/ / / /  _/ ___/__ \
#     / / / / /_/ // / \__ \__/ /
#    / /_/ / __  // / ___/ / __/ 
#   /_____/_/ /_/___//____/____/
#
#   DHIS2 instance log viewer

if [ "$#" -ne 1 ]; then
  echo "usage: dhis2-logview <instance name>"
  exit 1
fi

INSTANCE=$1

sudo -u $INSTANCE less /var/lib/dhis2/$INSTANCE/logs/catalina.out
